<UserControl x:Class="Compendium.WPF.Views.SpellViewerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Compendium.WPF.Views"
    xmlns:vm="clr-namespace:Compendium.WPF.ViewModels.SpellViewer"
    xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
    mc:Ignorable="d" 
    d:DesignHeight="500" d:DesignWidth="500"
    x:Name="SpellViewerRoot">
    <UserControl.Resources>
        <Style
            x:Key="GroupHeaderStyle"
            TargetType="{x:Type GroupItem}">
            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate
                        TargetType="{x:Type GroupItem}">
                        <Expander
                            x:Name="exp"
                            IsExpanded="True"
                            Background="LightGray"
                            Foreground="Black">
                            <Expander.Header>
                                <TextBlock
                                    FontWeight="Bold"
                                    TextAlignment="Left">
                                    <TextBlock.Inlines>
                                        <Run
                                            Text="Level" />
                                        <Run
                                            Text="{Binding Path=Name, Mode=OneWay}" />
                                    </TextBlock.Inlines>
                                </TextBlock>
                            </Expander.Header>
                            <ItemsPresenter />
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="48" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="0" />
            <ColumnDefinition
                Width="2*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- APP BAR -->
        <material:ColorZone
            Height="48"
            material:ShadowAssist.ShadowDepth="Depth2"
            Mode="PrimaryMid"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Canvas.ZIndex="10">
            <DockPanel>
                <ToggleButton
                    Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                    IsChecked="{Binding IsDrawerOpen, ElementName=SpellViewerRoot}"
                    Height="40"
                    x:Name="MenuToggleButton"
                    DockPanel.Dock="Left"
                    Margin="12,0,0,0" />

                <material:PopupBox
                    DockPanel.Dock="Right"
                    PlacementMode="BottomAndAlignRightEdges"
                    StaysOpen="False"
                    Height="40"
                    Margin="0,0,12,0">
                    <StackPanel>
                        <Button
                            Content="Hello World"
                            Click="MenuPopupButton_OnClick" />
                        <Button
                            Content="Nice Popup"
                            Click="MenuPopupButton_OnClick" />
                        <Button
                            Content="Can't Touch This"
                            IsEnabled="False" />
                        <Separator />
                        <Button
                            Content="Goodbye"
                            Click="MenuPopupButton_OnClick" />
                    </StackPanel>
                </material:PopupBox>

                <TextBlock
                    Text="Spell Viewer"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Margin="24,0,0,0" />
                
                
            </DockPanel>
        </material:ColorZone>

        <!-- Filters -->
        
        <!-- Display -->
        <local:SpellDisplayView
            DataContext="{Binding SelectedSpell.Display}"
            Grid.Row="1"
            Grid.Column="2"
            Canvas.ZIndex="0"/>

        <!-- Spell List -->
        <DataGrid
            SelectedItem="{Binding SelectedSpell, Mode=TwoWay}"
            ItemsSource="{Binding Spells}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserResizeRows="False"
            IsReadOnly="True"
            SelectionUnit="FullRow"
            AllowDrop="False"
            ScrollViewer.CanContentScroll="True"
            VirtualizingPanel.IsVirtualizing="True"
            Grid.Row="1"
            Grid.Column="1"
            Canvas.ZIndex="0">
            <DataGrid.GroupStyle>
                <GroupStyle
                    ContainerStyle="{StaticResource GroupHeaderStyle}">
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter />
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>
            <!--<DataGrid.CellStyle>
                <Style
                    TargetType="DataGridCell">
                    <Setter
                        Property="BorderThickness"
                        Value="0" />
                    <Setter
                        Property="FocusVisualStyle"
                        Value="{x:Null}" />
                </Style>
            </DataGrid.CellStyle>-->
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Name"
                    Binding="{Binding Name, Mode=OneWay, IsAsync=True, FallbackValue=Loading...}"
                    Visibility="Visible"
                    Width="220"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Header="School"
                    Binding="{Binding School, Mode=OneWay, IsAsync=True, FallbackValue=...}"
                    Visibility="Visible"
                    IsReadOnly="True" />
                <DataGridCheckBoxColumn
                    Header="Conc"
                    Binding="{Binding Concentration, Mode=OneWay, IsAsync=True, FallbackValue=False}"
                    Visibility="Visible"
                    IsReadOnly="True" />
                <DataGridCheckBoxColumn
                    Header="Ritual"
                    Binding="{Binding Ritual, Mode=OneWay, IsAsync=True, FallbackValue=False}"
                    Visibility="Visible"
                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
