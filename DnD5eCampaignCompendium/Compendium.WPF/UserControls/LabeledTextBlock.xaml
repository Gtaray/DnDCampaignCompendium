<UserControl x:Class="Compendium.WPF.UserControls.LabeledTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Compendium.WPF.UserControls"
             x:Name="Root"
             mc:Ignorable="d" d:DesignWidth="300">
    <DockPanel>
        <Label
            Name="BaseLabel"
            Content="{Binding ElementName=Root, Path=LabelText}"
            Style="{StaticResource MaterialDesignLabel}"
            VerticalAlignment="Center" />
        <TextBlock
            Name="BaseTextBox"
            Text="{Binding ElementName=Root, Path=TextBlock}"
            Style="{StaticResource MaterialDesignBody1TextBlock}"
            VerticalAlignment="Center" />
    </DockPanel>
</UserControl>
